{
  "compilerOptions": {
    "declaration": true,
    "module": "Node16",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "target": "es2022",
    "moduleResolution": "node16",
    "composite": true,
    "sourceMap": true,
    "allowJs": true,
    "skipLibCheck": true,
  },
  "include": ["./src/**/*"],
  "exclude": ["dist", "./tmp/**","./bin/**", "./eslint.config.mjs"],
  "ts-node": {
    "esm": true
  }
}
